pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
x = 64  
y = 64
color = 2

function _update()
    if (btn(⬅️)) then 
        x=x-1
        color = 1
    end
    if (btn(➡️)) then 
        x=x+1 
        color = 3
    end
    if (btn(⬆️)) then 
        y=y-1 
        color = 4
    end
    if (btn(⬇️)) then
        y=y+1 
        color = 5
    end
end

function _draw()
  rectfill(0,0,127,127,color)
  circfill(x,y,7,8)
end
